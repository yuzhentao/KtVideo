<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/landing_background">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/iv"
        android:layout_width="@dimen/x44"
        android:layout_height="@dimen/x28"
        android:background="@drawable/ic_action_focus_white_no_margin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_name_en"
        style="@style/TextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x14"
        android:text="@string/splash_name_en"
        android:textColor="@color/white"
        android:textSize="@dimen/x18"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_name_cn"
        style="@style/TextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x14"
        android:text="@string/splash_name_cn"
        android:textColor="@color/white"
        android:textSize="@dimen/x16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_name_en" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_intro_en"
        style="@style/TextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/x12"
        android:text="@string/splash_intro_en"
        android:textColor="@color/white"
        android:textSize="@dimen/x12"
        app:layout_constraintBottom_toTopOf="@id/tv_intro_cn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_intro_cn"
        style="@style/TextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/x38"
        android:text="@string/splash_intro_cn"
        android:textColor="@color/white"
        android:textSize="@dimen/x12"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</android.support.constraint.ConstraintLayout>