<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.shuyu.gsyvideoplayer.video.StandardGSYVideoPlayer
        android:id="@+id/vp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/iv_bg"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_weight="3" />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/iv_bg"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/vp"
        app:layout_constraintVertical_weight="2"
        tools:background="@color/colorPrimaryDark" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_title"
        style="@style/TextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x10"
        android:gravity="start|center_vertical"
        android:maxLines="2"
        android:paddingStart="@dimen/x10"
        android:paddingEnd="@dimen/x10"
        android:textColor="@color/white"
        android:textSize="@dimen/x16"
        app:layout_constraintTop_toTopOf="@id/iv_bg"
        tools:text="测试测试测试" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_time"
        style="@style/TextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x5"
        android:gravity="start|center_vertical"
        android:paddingStart="@dimen/x10"
        android:paddingEnd="@dimen/x10"
        android:textColor="@color/white"
        android:textSize="@dimen/x10"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        tools:text="测试测试测试" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_desc"
        style="@style/TextStyle"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/x5"
        android:gravity="start"
        android:maxLines="10"
        android:paddingStart="@dimen/x10"
        android:paddingEnd="@dimen/x10"
        android:textColor="@color/white"
        android:textSize="@dimen/x12"
        app:layout_constraintBottom_toTopOf="@id/ll_favorite"
        app:layout_constraintTop_toBottomOf="@id/tv_time"
        tools:text="测试测试测试" />

    <LinearLayout
        android:id="@+id/ll_favorite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/x10"
        android:layout_marginTop="@dimen/x5"
        android:layout_marginBottom="@dimen/x15"
        android:gravity="center"
        android:maxWidth="@dimen/x60"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@id/iv_bg"
        app:layout_constraintStart_toStartOf="@id/iv_bg"
        app:layout_constraintTop_toBottomOf="@id/tv_desc">

        <android.support.v7.widget.AppCompatImageView
            android:layout_width="@dimen/x12"
            android:layout_height="@dimen/x12"
            android:scaleType="fitXY"
            android:src="@drawable/ic_action_favorites_without_padding" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_favorite"
            style="@style/TextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/x2"
            android:textColor="@color/white"
            android:textSize="@dimen/x12"
            tools:text="测试" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/x5"
        android:gravity="center"
        android:maxWidth="@dimen/x60"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@id/ll_favorite"
        app:layout_constraintStart_toEndOf="@id/ll_favorite"
        app:layout_constraintTop_toTopOf="@id/ll_favorite">

        <android.support.v7.widget.AppCompatImageView
            android:layout_width="@dimen/x12"
            android:layout_height="@dimen/x12"
            android:scaleType="fitXY"
            android:src="@drawable/ic_action_share_without_padding" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_share"
            style="@style/TextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/x2"
            android:textColor="@color/white"
            android:textSize="@dimen/x12"
            tools:text="测试" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_reply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/x5"
        android:gravity="center"
        android:maxWidth="@dimen/x60"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@id/ll_favorite"
        app:layout_constraintStart_toEndOf="@id/ll_share"
        app:layout_constraintTop_toTopOf="@id/ll_favorite">

        <android.support.v7.widget.AppCompatImageView
            android:layout_width="@dimen/x12"
            android:layout_height="@dimen/x12"
            android:scaleType="fitXY"
            android:src="@drawable/ic_action_reply_nopadding" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_reply"
            style="@style/TextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/x2"
            android:textColor="@color/white"
            android:textSize="@dimen/x12"
            tools:text="测试" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_download"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/x5"
        android:gravity="center"
        android:maxWidth="@dimen/x60"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@id/ll_favorite"
        app:layout_constraintStart_toEndOf="@id/ll_reply"
        app:layout_constraintTop_toTopOf="@id/ll_favorite">

        <android.support.v7.widget.AppCompatImageView
            android:layout_width="@dimen/x12"
            android:layout_height="@dimen/x12"
            android:scaleType="fitXY"
            android:src="@drawable/action_download_cut" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_download"
            style="@style/TextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/x2"
            android:textColor="@color/white"
            android:textSize="@dimen/x12"
            tools:text="测试" />
    </LinearLayout>


</android.support.constraint.ConstraintLayout>