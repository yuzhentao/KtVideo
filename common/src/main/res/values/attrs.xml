<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="ProgressButton">
        <attr name="pb_fab_color" format="color" />
        <attr name="pb_fab_ripple_color" format="color" />
        <attr name="pb_fab_circle_color" format="color" />
        <attr name="pb_fab_progress_icon" format="reference" />
        <attr name="pb_fab_final_icon" format="reference" />
        <attr name="pb_fab_total_progress" format="integer" />
        <attr name="pb_fab_current_progress" format="integer" />
        <attr name="pb_fab_starting_progress" format="integer" />
        <attr name="pb_fab_step_size" format="integer" />
    </declare-styleable>

    <declare-styleable name="ExpandLayout">
        <attr name="contentTextSize" format="dimension" />
        <attr name="contentTextColor" format="color|reference" />
        <attr name="maxCollapsedLines" format="integer" />
        <attr name="ellipsizeText" format="string" />
        <attr name="expandText" format="string" />
        <attr name="collapseText" format="string" />
        <attr name="expandCollapseTextSize" format="dimension" />
        <attr name="expandCollapseTextColor" format="color|reference" />
        <attr name="expandCollapseTextGravity">
            <enum name="start" value="0" />
            <enum name="center" value="1" />
            <enum name="end" value="2" />
        </attr>
        <attr name="expandCollapseTextLayoutGravity">
            <enum name="start" value="0" />
            <enum name="center" value="1" />
            <enum name="end" value="2" />
        </attr>
        <attr name="expandCollapseTextMarginTop" format="dimension" />
    </declare-styleable>

    <declare-styleable name="CustomRadioButton">
        <attr name="rb_width" format="dimension" />
        <attr name="rb_height" format="dimension" />
    </declare-styleable>

    <declare-styleable name="EasySwipeMenuLayout">
        <attr name="leftMenuView" format="reference" />
        <attr name="rightMenuView" format="reference" />
        <attr name="contentView" format="reference" />
        <attr name="canRightSwipe" format="boolean" />
        <attr name="canLeftSwipe" format="boolean" />
        <attr name="fraction" format="float" />
    </declare-styleable>

</resources>